<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="?android:attr/selectableItemBackground">


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_car"
                    android:id="@+id/imagePolicyType"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="13dp"/>

            <TextView
                    android:text="ОСАГО"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/policyType"
                    android:layout_alignTop="@+id/imagePolicyType"
                    android:layout_toRightOf="@+id/imagePolicyType"
                    android:layout_toEndOf="@+id/imagePolicyType"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"/>
            <TextView
                    android:text="EEE0858555888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/policyNumber"
                    android:layout_alignBaseline="@+id/policyType"
                    android:layout_alignBottom="@+id/policyType"
                    android:layout_toRightOf="@+id/policyType"
                    android:layout_toEndOf="@+id/policyType"
                    android:layout_marginLeft="19dp"
                    android:layout_marginStart="19dp"/>
            <TextView
                    android:text="Nissan Qashqai"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/objectOfInsurance"
                    android:layout_below="@+id/imagePolicyType"
                    android:layout_alignLeft="@+id/policyType"
                    android:layout_alignStart="@+id/policyType"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/group_copy_8"
                    android:id="@+id/imagefollowingTo"
                    android:layout_alignTop="@+id/policyNumber"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="14dp"
                    android:layout_marginEnd="14dp"/>
            <TextView
                    android:text="с 02.01.2016 по 01.01.2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/validity"
                    android:layout_below="@+id/objectOfInsurance"
                    android:layout_alignLeft="@+id/objectOfInsurance"
                    android:layout_alignStart="@+id/objectOfInsurance"
                    android:layout_marginTop="8dp"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:layout_below="@+id/objectOfInsurance"
                    android:layout_marginTop="40dp"
                    android:layout_alignParentBottom="true">

                <ProgressBar
                        android:progressDrawable="@android:drawable/progress_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:max="7"
                        android:progress="5"
                        android:minWidth="240dp"
                        android:minHeight="20dp"
                        android:indeterminate="false"
                        android:indeterminateOnly="false"
                        android:layout_marginStart="44dp"
                        android:layout_marginLeft="44dp"
                        android:layout_marginTop="8dp"
                        android:layout_above="@+id/imageShoppingCart"/>
                <TextView
                        android:text="Осталось 5 дней(до 01.05.2017)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textRemainingDays"
                        android:layout_alignBottom="@+id/imageShoppingCart"
                        android:layout_alignLeft="@+id/progressBar"
                        android:layout_alignStart="@+id/progressBar"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:srcCompat="@drawable/time"
                        android:id="@+id/imageShoppingCart"
                        android:minHeight="32dp"
                        android:maxWidth="32dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginEnd="14dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>