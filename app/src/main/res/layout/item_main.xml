<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="?android:attr/selectableItemBackground">


            <ImageView
                android:id="@+id/imagePolicyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                app:srcCompat="@drawable/icon_car" />

            <TextView
                android:id="@+id/policyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imagePolicyType"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/imagePolicyType"
                android:layout_toRightOf="@+id/imagePolicyType"
                android:text="ОСАГО"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/policyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/policyType"
                android:layout_alignBottom="@+id/policyType"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/policyType"
                android:layout_toRightOf="@+id/policyType"
                android:text="EEE0858555888" />

            <TextView
                android:id="@+id/objectOfInsurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/policyType"
                android:layout_alignStart="@+id/policyType"
                android:layout_below="@+id/imagePolicyType"
                android:text="Nissan Qashqai"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imagefollowingTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/policyNumber"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                app:srcCompat="@drawable/group_copy_8" />

            <TextView
                android:id="@+id/validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/objectOfInsurance"
                android:layout_alignStart="@+id/objectOfInsurance"
                android:layout_below="@+id/objectOfInsurance"
                android:layout_marginTop="8dp"
                android:text="с 02.01.2016 по 01.01.2017" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/objectOfInsurance"
                android:layout_marginTop="40dp"
                android:background="@color/grey">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imageShoppingCart"
                    android:layout_marginLeft="44dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="8dp"
                    android:indeterminate="false"
                    android:indeterminateOnly="false"
                    android:max="7"
                    android:minHeight="20dp"
                    android:minWidth="240dp"
                    android:progress="5"
                    android:progressDrawable="@android:drawable/progress_horizontal" />

                <TextView
                    android:id="@+id/textRemainingDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageShoppingCart"
                    android:layout_alignLeft="@+id/progressBar"
                    android:layout_alignStart="@+id/progressBar"
                    android:text="Осталось 5 дней(до 01.05.2017)" />

                <ImageView
                    android:id="@+id/imageShoppingCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:clickable="true"
                    android:maxWidth="32dp"
                    android:minHeight="32dp"
                    app:srcCompat="@drawable/time" />

            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>